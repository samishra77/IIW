<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

	<import resource="deviceDetailsProcess-config.xml"/>

	<bean id="loggingAspectBean" class="com.colt.util.LoggingAspect" />

	<aop:config>
		<aop:pointcut id="loggingPointcut" expression="execution(* com.colt.*.*.*(..))" />
		<aop:aspect id="loggingAspect" ref="loggingAspectBean" >
			<aop:around pointcut-ref="loggingPointcut" method="logAround" />
			<aop:after-throwing pointcut-ref="loggingPointcut" method="logExitAfterThrowing" throwing="e"/>
		</aop:aspect>
	</aop:config>

	<bean id="deviceDetailsProcess" class="com.colt.aopwf.DeviceDetailsProcess"/>
</beans>
